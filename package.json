{
    "name": "template-frontend-angular",
    "version": "0.0.0",
    "scripts": {
        "---------------------------------------- SERVER -------------------------------------": "",
        "start": "ng serve",
        "dev:ssr": "ng run template-frontend-angular:serve-ssr",
        "start:ssr": "node dist/server/main.js",
        "start:prod:local": "cd dist/browser && angular-http-server",
        "----------------------------------------- BUILD -------------------------------------": "",
        "build": "ng build",
        "build:watch": "ng build --watch --configuration development",
        "build:ssr": "ng build && ng run template-frontend-angular:server",
        "prerender": "ng run template-frontend-angular:prerender",
        "----------------------------------------- TEST --------------------------------------": "",
        "test": "jest --watch",
        "test-ci": "jest --bail=true --coverage",
        "test-coverage": "jest --coverage --watch",
        "----------------------------------------- LINT --------------------------------------": "",
        "lint": "ng lint",
        "lint:fix": "ng lint --fix",
        "------------------------------------- GENERATE API ----------------------------------": "",
        "pregenerate-api": "curl {{SWAGGER_API_URL}} -s -o ./swagger.json",
        "generate-api": "npx api-client-generator -s ./swagger.json -o ./src/app/shared/services/generated-api-service -t all -g",
        "postgenerate-api": "ts-node ./tasks/correct-generated-api-defs.ts && rimraf ./swagger.json",
        "--------------------------------------- COVERAGE ------------------------------------": "",
        "compodoc": "npx compodoc src",
        "validate-doc-coverage": "ts-node ./tasks/validate-doc-coverage.ts",
        "see-coverage": "npx http-server coverage/",
        "report-coverage": "npm run test-coverage && npm run see-coverage",
        "--------------------------------------- VERSIONING ----------------------------------": "",
        "increase-version:major": "npm --no-git-tag-version version major",
        "increase-version:minor": "npm --no-git-tag-version version minor",
        "increase-version:patch": "npm --no-git-tag-version version patch",
        "------------------------------------------ MISC -------------------------------------": "",
        "ng": "ng",
        "ngcc": "ngcc",
        "postinstall": "npm run ngcc",
        "analyze-bundles": "webpack-bundle-analyzer dist/browser/stats.json",
        "serve:ssr": "node dist/template-frontend-angular/server/main.js"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^15.0.3",
        "@angular/cdk": "15.0.3",
        "@angular/common": "^15.0.3",
        "@angular/compiler": "^15.0.3",
        "@angular/core": "^15.0.3",
        "@angular/forms": "^15.0.3",
        "@angular/platform-browser": "^15.0.3",
        "@angular/platform-browser-dynamic": "^15.0.3",
        "@angular/platform-server": "^15.0.3",
        "@angular/router": "^15.0.3",
        "@angular/service-worker": "^15.0.4",
        "@ngrx/data": "^15.0.0",
        "@ngrx/effects": "^15.0.0",
        "@ngrx/entity": "^15.0.0",
        "@ngrx/router-store": "^15.0.0",
        "@ngrx/schematics": "^15.0.0",
        "@ngrx/store": "^15.0.0",
        "@ngrx/store-devtools": "^15.0.0",
        "@nguniversal/express-engine": "^15.0.0",
        "@ngx-translate/core": "^14.0.0",
        "@ngx-translate/http-loader": "^7.0.0",
        "date-fns": "^2.29",
        "express": "^4.15.2",
        "reflect-metadata": "^0.1.13",
        "rxjs": "~7.5.0",
        "tslib": "^2.3.0",
        "uuid": "^9.0.0",
        "zone.js": "~0.12.0"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^15.0.2",
        "@angular-eslint/builder": "15.1.0",
        "@angular-eslint/eslint-plugin": "15.1.0",
        "@angular-eslint/eslint-plugin-template": "15.1.0",
        "@angular-eslint/schematics": "15.1.0",
        "@angular-eslint/template-parser": "15.1.0",
        "@angular/cli": "~15.0.2",
        "@angular/compiler-cli": "^15.0.0",
        "@compodoc/compodoc": "^1.1.19",
        "@nguniversal/builders": "^15.0.0",
        "@playwright/test": "^1.26.1",
        "@types/express": "^4.17.0",
        "@types/jest": "^28.1.8",
        "@types/node": "^14.15.0",
        "@typescript-eslint/eslint-plugin": "5.44.0",
        "@typescript-eslint/parser": "5.44.0",
        "core-js": "^3.26.0",
        "dotenv": "^16.0.3",
        "eslint": "8.0.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jsdoc": "^39.2.0",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-sonarjs": "^0.17.0",
        "html-loader-jest": "^0.2.1",
        "jest": "^28.1.3",
        "jest-environment-jsdom": "28.1.0",
        "jest-marbles": "3.0.3",
        "jest-preset-angular": "12.2.3",
        "prettier": "^2.2.1",
        "rimraf": "^3.0.2",
        "source-map-explorer": "^2.5.2",
        "ts-node": "^10.9.1",
        "typescript": "~4.8.2",
        "webpack-bundle-analyzer": "^4.7.0"
    }
}
